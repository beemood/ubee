{
  "jsc": {
    "target": "esnext",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": true
  },
  "module": {
    "type": "nodenext"
  },
  "sourceMaps": true,
  "exclude": ["vite.config.ts", ".*\\.spec.tsx?$", ".*\\.test.tsx?$", ".*.js$"]
}
